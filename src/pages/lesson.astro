---
import Layout from "../layouts/Layout.astro";
import LessonFlowSection from "../components/lesson/LessonFlowSection.astro";
import LessonPriceSection from "../components/lesson/LessonPriceSection.astro";
import LessonVoiceSection from "../components/lesson/LessonVoiceSection.astro";
import LessonCTASection from "../components/lesson/LessonCTASection.astro";

const pageTitle =
    "ピアノ訪問・出張レッスンの流れ・料金 | 江東区・清澄白河 | 髙橋遊月ピアノ教室";
const pageDescription =
    "江東区のピアノ家庭教師「髙橋遊月ピアノ教室」の訪問レッスンの流れ・料金ご案内。マンツーマン個人指導、送迎不要で仕事帰りにも便利。体験レッスン受付中。";

const schema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
        {
            "@type": "ListItem",
            position: 1,
            name: "Home",
            item: "https://playon-music.jp",
        },
        {
            "@type": "ListItem",
            position: 2,
            name: "レッスンについて",
            item: "https://playon-music.jp/lesson",
        },
    ],
});
---

<Layout title={pageTitle} description={pageDescription}>
    <script type="application/ld+json" set:html={schema} slot="head" />

    <LessonFlowSection />
    <LessonPriceSection />
    <LessonVoiceSection />
    <LessonCTASection />
</Layout>
