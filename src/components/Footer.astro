---
import { areas } from "../data/areas";
const year = new Date().getFullYear();
---

<footer
    class="py-16 text-center text-[10px] tracking-[0.2em] opacity-40 uppercase border-t border-[#F1EBE4] mt-auto"
>
    <div class="mb-12 max-w-4xl mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 text-center">
            {
                areas.map((area) => (
                    <a
                        href={`/area/${area.slug}`}
                        class="block py-2 hover:opacity-100 hover:text-[#A88B58] transition-all"
                    >
                        {area.name}
                    </a>
                ))
            }
        </div>
    </div>
    <div class="mb-6">
        <a
            href="/policy"
            class="hover:opacity-100 transition-opacity inline-block px-4 py-2"
            >Privacy Policy</a
        >
    </div>
    <p>&copy; {year} Takahashi Yuzuki Piano School.</p>
</footer>
