---
import { areas, areaGroups } from "../data/areas";
const year = new Date().getFullYear();
---

<footer
    class="py-16 text-center text-[10px] tracking-[0.2em] uppercase border-t border-[#F1EBE4] mt-auto bg-[#FCFAF7]"
>
    {/* SEO対策：主要エリアへの内部リンク網羅 */}
    <div class="max-w-7xl mx-auto px-6 mb-12">
        <p
            class="font-serif text-[#A88B58] mb-6 text-xs tracking-widest text-center opacity-80"
        >
            SERVICE AREAS
        </p>

        <div
            class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 text-left"
        >
            {
                areaGroups.map((group) => (
                    <div class="flex flex-col gap-3">
                        <span class="text-[#8C7B6C] font-medium border-b border-[#A88B58]/20 pb-1">
                            {group.district}
                        </span>
                        <div class="flex flex-col gap-2">
                            {group.areaSlugs.map((slug) => {
                                const area = areas.find((a) => a.slug === slug);
                                return area ? (
                                    <a
                                        href={`/area/${area.slug}`}
                                        class="text-[#544A40]/60 hover:text-[#A88B58] transition-colors text-[9px] tracking-wider"
                                    >
                                        {area.name}のピアノ教室
                                    </a>
                                ) : null;
                            })}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>

    <div class="mb-6 opacity-40">
        <a
            href="/policy"
            class="hover:opacity-100 transition-opacity inline-block px-4 py-2"
            >Privacy Policy</a
        >
    </div>
    <p class="opacity-40">&copy; {year} Takahashi Yuzuki Piano School.</p>
</footer>
