---
import type { Area } from "../../data/areas";

interface Props {
    area: Area;
    className?: string;
}

const { area, className = "bg-white" } = Astro.props;
---

<section class={`py-20 px-6 max-w-4xl mx-auto ${className}`}>
    <div class="text-center mb-16">
        <h2 class="text-xs font-serif text-[#A88B58] tracking-widest mb-4">
            Concept
        </h2>
        <div
            class="text-3xl md:text-4xl font-serif text-[#544A40] leading-relaxed mb-8"
            set:html={area.catchphrase}
        />
        <p
            class="text-[#544A40]/80 leading-loose text-justify md:text-center max-w-2xl mx-auto"
        >
            {area.lead}
        </p>
    </div>

    <div class="space-y-12">
        {
            area.features.map((feature, index) => (
                <div
                    class={`flex flex-col md:flex-row gap-8 items-start ${index % 2 === 1 ? "md:flex-row-reverse" : ""}`}
                >
                    <div class="flex-1 bg-[#FCFAF7] p-8 rounded-2xl border border-[#F1EBE4] relative overflow-hidden group hover:shadow-sm transition-shadow duration-300">
                        <div class="absolute top-0 right-0 p-4 opacity-10 font-serif text-6xl text-[#A88B58] font-bold leading-none select-none">
                            {String(index + 1).padStart(2, "0")}
                        </div>
                        <h3 class="text-xl font-serif text-[#544A40] mb-4 flex items-center gap-3">
                            <span class="w-8 h-[1px] bg-[#A88B58]" />
                            {feature.title}
                        </h3>
                        <p class="text-[#544A40]/80 leading-relaxed text-justify">
                            {feature.description}
                        </p>
                    </div>
                </div>
            ))
        }
    </div>
</section>
