---
import type { Area } from "../../data/areas";

interface Props {
    area: Area;
}

const { area } = Astro.props;
---

<section class="py-20 px-6 max-w-4xl mx-auto">
    <div class="text-center mb-16">
        <h2 class="text-2xl md:text-3xl font-serif mb-6 text-[#544A40] leading-relaxed">
            {area.name}への出張ピアノレッスンの特徴
        </h2>
        <p
            class="text-lg text-[#A88B58] mb-6 font-serif"
            set:html={area.catchphrase}
        />
        <p class="text-[#544A40]/80 leading-relaxed text-left md:text-center">
            {area.lead}
        </p>
    </div>

    <div class="space-y-16">
        {
            area.features.map((feature, index) => (
                <div
                    class={`flex flex-col md:flex-row gap-8 items-center ${index % 2 === 1 ? "md:flex-row-reverse" : ""}`}
                >
                    <div class="flex-1 space-y-4">
                        <h3 class="text-xl font-serif text-[#A88B58] border-l-4 border-[#A88B58] pl-4">
                            {feature.title}
                        </h3>
                        <p class="text-[#544A40]/80 leading-relaxed text-left md:text-justify">
                            {feature.description}
                        </p>
                    </div>
                </div>
            ))
        }
    </div>
</section>
