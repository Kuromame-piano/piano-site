---
import type { Area } from "../../data/areas";

interface Props {
    area: Area;
}

const { area } = Astro.props;
---

<section class="py-20 px-6 bg-white">
    <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
            <h2 class="text-2xl md:text-3xl font-serif text-[#544A40] mb-4">
                {area.name}でよくある課題と解決策
            </h2>
            <p class="text-sm md:text-base text-[#6B5F54]">
                体験レッスン前にご相談の多いポイントを整理しました。
            </p>
        </div>

        <div class="space-y-8">
            {
                area.needSolutions.map((item, index) => (
                    <article class="group relative bg-white rounded-2xl border border-[#F1EBE4] shadow-sm overflow-hidden hover:shadow-md transition-shadow duration-300">
                        <div class="flex flex-col md:flex-row">
                            {/* Issue Side */}
                            <div class="p-8 md:w-2/5 bg-[#FCFAF7] border-b md:border-b-0 md:border-r border-[#F1EBE4]">
                                <div class="flex items-center gap-3 mb-4">
                                    <span class="bg-[#544A40] text-white text-[10px] mobile-s:text-xs font-bold px-2 py-1 rounded tracking-widest">
                                        ISSUE{" "}
                                        {String(index + 1).padStart(2, "0")}
                                    </span>
                                </div>
                                <h3 class="text-lg font-serif text-[#544A40] leading-snug">
                                    {item.need}
                                </h3>
                            </div>

                            {/* Solution Side */}
                            <div class="p-8 md:w-3/5 bg-white relative">
                                {/* Arrow Indicator (Desktop) */}
                                <div class="hidden md:block absolute top-1/2 -left-3 w-6 h-6 bg-white border-l border-b border-[#F1EBE4] transform rotate-45 z-10" />

                                <p class="text-xs font-bold text-[#A88B58] mb-3 flex items-center gap-2 uppercase tracking-wider">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-5 w-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                                        />
                                    </svg>
                                    Solution
                                </p>
                                <p class="text-[#544A40]/90 leading-relaxed text-justify">
                                    {item.solution}
                                </p>
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>
