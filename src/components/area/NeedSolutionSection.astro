---
import type { Area } from "../../data/areas";

interface Props {
    area: Area;
}

const { area } = Astro.props;
---

<section class="py-20 px-6 bg-white">
    <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
            <h2 class="text-2xl md:text-3xl font-serif text-[#544A40]">
                {area.name}でよくある課題と解決策
            </h2>
            <p class="mt-4 text-sm md:text-base text-[#6B5F54]">
                体験レッスン前にご相談の多いポイントを整理しました。
            </p>
        </div>

        <div class="space-y-5">
            {area.needSolutions.map((item, index) => (
                <article class="bg-[#FCFAF7] rounded-xl border border-[#E8E2D9] p-6">
                    <p class="text-xs tracking-widest text-[#A88B58] font-medium mb-2">
                        ISSUE {String(index + 1).padStart(2, "0")}
                    </p>
                    <h3 class="text-lg text-[#544A40] font-medium leading-relaxed mb-3">
                        {item.need}
                    </h3>
                    <p class="text-[#544A40]/80 leading-relaxed">
                        {item.solution}
                    </p>
                </article>
            ))}
        </div>
    </div>
</section>
