---
interface Props {
    items: {
        label: string;
        path: string;
    }[];
}

const { items } = Astro.props;
---

<nav
    class="flex text-xs md:text-sm text-[#A88B58] py-4 px-6 max-w-5xl mx-auto"
    aria-label="Breadcrumb"
>
    <ol class="inline-flex items-center space-x-1 md:space-x-2">
        <li class="inline-flex items-center">
            <a href="/" class="hover:text-[#8B7355] transition-colors">
                ホーム
            </a>
        </li>
        {
            items.map((item) => (
                <li>
                    <div class="flex items-center">
                        <svg
                            class="rtl:rotate-180 w-3 h-3 text-[#A88B58] mx-1"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 6 10"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="m1 9 4-4-4-4"
                            />
                        </svg>
                        <a
                            href={item.path}
                            class="ml-1 hover:text-[#8B7355] md:ml-2 transition-colors"
                        >
                            {item.label}
                        </a>
                    </div>
                </li>
            ))
        }
    </ol>
</nav>
